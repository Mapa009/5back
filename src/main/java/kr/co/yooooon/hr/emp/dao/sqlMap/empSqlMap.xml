	<select id="selectLastEmpCode" resultType="java.lang.String">
        SELECT replace(emp_code,substr(emp_code,2),substr(EMP_CODE,2)+1)
        FROM (select rownum rn,emp_code from emp
              ORDER BY EMP_CODE DESC) e
        where e.rn = '1'
	</select>
	
